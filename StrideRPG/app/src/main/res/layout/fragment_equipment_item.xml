<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="8dp">

    <GridLayout
        android:id="@+id/equipmentFragmentGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:columnCount="3"
        android:elevation="10dp"
        android:padding="8dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:rowCount="3">

        <TextView
            android:id="@+id/item_statboost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_column="2"
            android:layout_marginEnd="5dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:elevation="2dp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="8sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/item_name"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginEnd="3dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_statboost"
            android:layout_alignBottom="@+id/item_statboost"
            android:layout_centerHorizontal="true"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="2dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="3dp"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_rowWeight="1"
            android:background="#000000"
            android:contentDescription="@string/image_that_shows_the_type_of_event_between_them"
            android:padding="3dp"
            android:src="@mipmap/ic_launcher" />

    </GridLayout>

</android.support.v7.widget.CardView>