<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stride.com.striderpg.fragments.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:id="@+id/dashboardGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="2">

        <GridLayout
            android:id="@+id/dashboardProfileGridLayout"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_row="0"
            android:background="?android:attr/colorBackground">

        </GridLayout>

        <ScrollView
            android:id="@+id/dashboardActivityScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:background="@color/card_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </GridLayout>
</FrameLayout>
