<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stride.com.striderpg.fragments.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:id="@+id/dashboardGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_gray"
        android:columnCount="1"
        android:rowCount="2">

        <GridLayout
            android:id="@+id/dashboardProfileGridLayout"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:background="?android:attr/colorBackground">

            <TextView
                android:id="@+id/playerExperienceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Experience:" />

            <TextView
                android:id="@+id/playerExperienceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="0"
                android:text="000000" />

            <TextView
                android:id="@+id/playerNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:padding="5dp"
                android:text="Username:" />

            <TextView
                android:id="@+id/playerUsernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="1"
                android:text="AAAAAA" />

            <TextView
                android:id="@+id/playerLevelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:padding="5dp"
                android:text="Level:" />

            <TextView
                android:id="@+id/playerLevelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_row="2"
                android:text="000000" />
        </GridLayout>

        <ScrollView
            android:id="@+id/dashboardActivityScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <Button
                    android:id="@+id/testLevelUpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Level" />

                <Button
                    android:id="@+id/testLevelDownBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- LEVEL" />

                <Button
                    android:id="@+id/testRandomExpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RANDOM EXP" />
            </LinearLayout>
        </ScrollView>
    </GridLayout>
</FrameLayout>
