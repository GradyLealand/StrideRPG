<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stride.com.striderpg.fragments.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:id="@+id/dashboardGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_light_gray"
        android:columnCount="1"
        android:rowCount="2">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/profileBarConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_row="0"
            android:background="@color/material_white">

        </android.support.constraint.ConstraintLayout>

        <ScrollView
            android:id="@+id/dashboardActivityScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

            </LinearLayout>
        </ScrollView>
    </GridLayout>
</FrameLayout>
