<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:elevation="8dp"
    android:padding="3dp">

    <GridLayout
        android:id="@+id/questsGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:columnCount="3"
        android:padding="15dp"
        android:rowCount="3">

        <ImageView
            android:id="@+id/questImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_rowWeight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/questTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_row="0"
            android:text="Quest Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/questTier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:text="Tier: X"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/questDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:text="Quest Description"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/questProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:scaleY="6" />

        <TextView
            android:id="@+id/questProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:text="10000/10000"
            android:textStyle="italic" />
    </GridLayout>

</android.support.v7.widget.CardView>